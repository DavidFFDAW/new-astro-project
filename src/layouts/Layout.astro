---
import CommonHead from '@components/CommonHead.astro';
const route = Astro.url.pathname.slice(1).replace(/\//g, '-') || 'home';
import '@css/medias.css';
---

<!doctype html>
<html lang="es">
    <head>
        <CommonHead title={Astro.props.title} />
    </head>
    <body id={route} class={`whole-app-container ${route}-page`}>
        <div class="app-padded-spaces">
            <slot />
        </div>
    </body>
</html>
